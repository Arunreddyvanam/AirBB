@model List<Airbnb.Models.User>
@{
    ViewData["Title"] = "My Users";
}

<div class="container py-5">

    <!-- Header / Add Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">My Users</h2>
        <a asp-controller="ManageUser" asp-action="Add" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
            <i class="bi bi-plus-circle"></i> Add New User
        </a>
    </div>

    <!-- Users Table -->
    <div class="table-responsive shadow-sm rounded-4 overflow-hidden">
        <table class="table table-hover mb-0">
            <thead class="table-primary">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">SSN</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Email</th>
                    <th scope="col">DOB</th>
                    <th scope="col">User Type</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Name</td>
                        <td>@user.SSN</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.Email</td>
                        <td>@user.DOB</td>
                        <td>@user.UserType</td>
                        <td class="text-center">
                            <a asp-controller="ManageUser" asp-action="Edit"
                               asp-route-id="@user.UserId"
                               class="btn btn-sm btn-outline-secondary rounded-pill me-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="ManageUser" asp-action="Delete"
                               asp-route-id="@user.UserId"
                               class="btn btn-sm btn-outline-danger rounded-pill">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
