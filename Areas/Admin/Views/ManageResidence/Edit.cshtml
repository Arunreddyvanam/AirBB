@model Airbnb.Models.Residence
@{
    string title = ViewBag.Action + " Residence";
    ViewData["Title"] = title;
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card border-0 shadow-lg rounded-4" style="max-width: 800px; width: 100%;">

        <!-- Header Banner -->
        <div class="position-relative">
            <div class="bg-primary" style="height: 180px;"></div>
            <div class="position-absolute bottom-0 start-0 p-4">
                <h2 class="text-white fw-bold">@title</h2>
                <p class="text-light mb-0">Update your residence details below.</p>
            </div>
        </div>

        <!-- Form Body -->
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row g-3">

                    <!-- Name -->
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-semibold">Residence Name</label>
                        <input asp-for="Name" class="form-control rounded-3 shadow-sm" placeholder="Enter residence name..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Location -->
                    <div class="col-md-6">
                        <label asp-for="LocationId" class="form-label fw-semibold">Location</label>
                        <select asp-for="LocationId" class="form-select rounded-3 shadow-sm">
                            <option value="">-- Select Location --</option>
                            @foreach (Airbnb.Models.Location g in ViewBag.Locations)
                            {
                                <option value="@g.LocationId">@g.Name</option>
                            }
                        </select>
                        <span asp-validation-for="LocationId" class="text-danger"></span>
                    </div>

                    <!-- Owner -->
                    <div class="col-md-6">
                        <label asp-for="UserId" class="form-label fw-semibold">Owner</label>
                        <select asp-for="UserId" class="form-select rounded-3 shadow-sm">
                            @foreach (Airbnb.Models.User g in ViewBag.Users)
                            {
                                <option value="@g.UserId">@g.Name</option>
                            }
                        </select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>

                    <!-- Guests -->
                    <div class="col-md-3">
                        <label asp-for="GuestNumber" class="form-label fw-semibold">Guests</label>
                        <input asp-for="GuestNumber" type="number" min="1" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="GuestNumber" class="text-danger"></span>
                    </div>

                    <!-- Bedrooms -->
                    <div class="col-md-3">
                        <label asp-for="BedroomNumber" class="form-label fw-semibold">Bedrooms</label>
                        <input asp-for="BedroomNumber" type="number" min="0" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="BedroomNumber" class="text-danger"></span>
                    </div>

                    <!-- Bathrooms -->
                    <div class="col-md-3">
                        <label asp-for="BathroomNumber" class="form-label fw-semibold">Bathrooms</label>
                        <input asp-for="BathroomNumber" type="number" step="0.5" min="0" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="BathroomNumber" class="text-danger"></span>
                    </div>

                    <!-- Built Year -->
                    <div class="col-md-3">
                        <label asp-for="BuildYear" class="form-label fw-semibold">Built Year</label>
                        <input asp-for="BuildYear" type="date" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="BuildYear" class="text-danger"></span>
                    </div>

                    <!-- Price Per Night -->
                    <div class="col-md-6">
                        <label asp-for="PricePerNight" class="form-label fw-semibold">Price Per Night</label>
                        <input asp-for="PricePerNight" type="number" step="0.01" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="PricePerNight" class="text-danger"></span>
                    </div>

                    <!-- Picture -->
                    <div class="col-md-6">
                        <label asp-for="ResidencePicture" class="form-label fw-semibold">Picture</label>
                        <input asp-for="ResidencePicture" class="form-control rounded-3 shadow-sm" placeholder="e.g., chicagoloop.jpg" />
                        <span asp-validation-for="ResidencePicture" class="text-danger"></span>
                    </div>

                </div>

                <input type="hidden" asp-for="ResidenceId" />

                <div class="mt-4 d-flex justify-content-between">

                    <!-- Cancel -->
                    <a asp-controller="ManageResidence" asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>

                    <!-- Save -->
                    <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill shadow-sm">
                        <i class="bi bi-check-circle"></i> Save
                    </button>

                </div>
            </form>
        </div>

    </div>
</div>
