@model List<Airbnb.Models.Residence>
@{
    ViewData["Title"] = "My Residences";
}

<div class="container py-5">

    <!-- Header / Add Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">My Residences</h2>
        <a asp-controller="ManageResidence" asp-action="Add" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
            <i class="bi bi-plus-circle"></i> Add New Residence
        </a>
    </div>

    <!-- Residences Table -->
    <div class="table-responsive shadow-sm rounded-4 overflow-hidden">
        <table class="table table-hover mb-0">
            <thead class="table-primary">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Location</th>
                    <th scope="col">Owner</th>
                    <th scope="col">Guests</th>
                    <th scope="col">Bedrooms</th>
                    <th scope="col">Bathrooms</th>
                    <th scope="col">Price / Night</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var res in Model)
                {
                    <tr>
                        <td>@res.ResidenceId</td>
                        <td>@res.Name</td>
                        <td>@res.Location?.Name</td>
                        <td>@res.User?.Name</td>
                        <td>@res.GuestNumber</td>
                        <td>@res.BedroomNumber</td>
                        <td>@res.BathroomNumber</td>
                        <td>@string.Format("{0:C}", res.PricePerNight)</td>
                        <td class="text-center">
                            <a asp-controller="ManageResidence" asp-action="Edit"
                               asp-route-id="@res.ResidenceId"
                               class="btn btn-sm btn-outline-secondary rounded-pill me-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="ManageResidence" asp-action="Delete"
                               asp-route-id="@res.ResidenceId"
                               class="btn btn-sm btn-outline-danger rounded-pill">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
