@model Airbnb.Models.Residence
@{
    ViewData["Title"] = "Delete Residence";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 650px; width: 100%;">

        <!-- Header Banner -->
        <div class="position-relative">
            <div class="bg-danger" style="height: 180px;"></div>
            <div class="position-absolute bottom-0 start-0 p-4">
                <h2 class="text-white fw-bold">Confirm Deletion</h2>
                <p class="text-light mb-0">You are about to delete this Residence permanently.</p>
            </div>
        </div>

        <!-- Residence Details -->
        <div class="card-body p-4 text-center">

            <img src="~/img/@Model.ResidencePicture" alt="@Model.Name" class="img-fluid rounded mb-3" style="max-height: 200px; object-fit: cover;">

            <h4 class="fw-bold mb-2">@Model.Name</h4>

            <p class="text-muted mb-3">
                Location: @Model.Location?.Name <br />
                Owner: @Model.User?.Name <br />
                Guests: @Model.GuestNumber, Bedrooms: @Model.BedroomNumber, Bathrooms: @Model.BathroomNumber <br />
                Price per Night: @Model.PricePerNight <br />
                Built Year: @Model.BuildYear
            </p>

            <p class="text-danger fw-semibold mb-4">
                This action cannot be undone. Are you sure you want to delete this residence?
            </p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ResidenceId" />

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <!-- Delete Button -->
                    <button type="submit" class="btn btn-danger px-4 py-2 rounded-pill shadow-sm">
                        <i class="bi bi-trash"></i> Delete
                    </button>

                    <!-- Cancel Button -->
                    <a asp-controller="ManageResidence" asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>

    </div>
</div>
